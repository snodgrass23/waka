<div class="max-w-2xl mx-auto">
  <div class="text-center mb-12">
    <h1 class="text-5xl font-bold bg-gradient-to-r from-blue-600 to-teal-600 bg-clip-text text-transparent mb-4">
      Your Travel Style
    </h1>
    <p class="text-xl text-gray-600">Step 2 of 3: Let's find your perfect match</p>
  </div>

  <%= form_with url: onboarding_update_path(step: 'travel_preferences'), method: :patch, class: "space-y-8" do |f| %>
    <!-- Travel Style -->
    <div class="bg-white rounded-2xl shadow-xl p-8">
      <h2 class="text-2xl font-bold text-gray-800 mb-6">How do you like to travel?</h2>
      <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
        <% TravelProfile::TRAVEL_STYLES.each do |style| %>
          <label class="flex items-center justify-center p-6 border-2 border-gray-200 rounded-xl cursor-pointer hover:border-blue-500 hover:bg-blue-50 transition-all <%= 'border-blue-500 bg-blue-50' if @travel_profile.travel_style == style %>">
            <%= radio_button_tag 'travel_style', style, @travel_profile.travel_style == style, class: "sr-only" %>
            <span class="text-lg font-medium text-gray-700"><%= style %></span>
          </label>
        <% end %>
      </div>
    </div>

    <!-- Budget Range -->
    <div class="bg-white rounded-2xl shadow-xl p-8">
      <h2 class="text-2xl font-bold text-gray-800 mb-6">What's your budget per trip?</h2>
      <div class="space-y-3">
        <% TravelProfile::BUDGET_RANGES.each do |range| %>
          <label class="flex items-center p-4 border-2 border-gray-200 rounded-xl cursor-pointer hover:border-teal-500 hover:bg-teal-50 transition-all <%= 'border-teal-500 bg-teal-50' if @travel_profile.budget_range == range %>">
            <%= radio_button_tag 'budget_range', range, @travel_profile.budget_range == range, class: "w-5 h-5 text-teal-600" %>
            <span class="ml-3 text-gray-700"><%= range %></span>
          </label>
        <% end %>
      </div>
    </div>

    <!-- Trip Length -->
    <div class="bg-white rounded-2xl shadow-xl p-8">
      <h2 class="text-2xl font-bold text-gray-800 mb-6">How long do you like to travel?</h2>
      <div class="grid grid-cols-2 gap-4">
        <% TravelProfile::TRIP_LENGTHS.each do |length| %>
          <label class="flex items-center p-4 border-2 border-gray-200 rounded-xl cursor-pointer hover:border-blue-500 hover:bg-blue-50 transition-all <%= 'border-blue-500 bg-blue-50' if @travel_profile.trip_length_preference == length %>">
            <%= radio_button_tag 'trip_length_preference', length, @travel_profile.trip_length_preference == length, class: "w-5 h-5 text-blue-600" %>
            <span class="ml-3 text-gray-700"><%= length %></span>
          </label>
        <% end %>
      </div>
    </div>

    <!-- Adventure Level -->
    <div class="bg-white rounded-2xl shadow-xl p-8">
      <h2 class="text-2xl font-bold text-gray-800 mb-6">What's your adventure level?</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <% TravelProfile::ADVENTURE_LEVELS.each do |level| %>
          <label class="flex items-center justify-center p-6 border-2 border-gray-200 rounded-xl cursor-pointer hover:border-teal-500 hover:bg-teal-50 transition-all <%= 'border-teal-500 bg-teal-50' if @travel_profile.adventure_level == level %>">
            <%= radio_button_tag 'adventure_level', level, @travel_profile.adventure_level == level, class: "sr-only" %>
            <span class="text-lg font-medium text-gray-700"><%= level %></span>
          </label>
        <% end %>
      </div>
    </div>

    <div class="flex justify-between items-center">
      <div class="text-sm text-gray-500">
        Progress: <span class="font-semibold text-blue-600">66%</span>
      </div>
      <div class="flex gap-4">
        <%= link_to "← Back", onboarding_path(step: 'hobbies'), class: "px-6 py-4 rounded-full font-semibold text-gray-600 hover:bg-gray-100 transition-all" %>
        <%= f.submit "Next Step →", class: "bg-gradient-to-r from-blue-600 to-teal-600 text-white px-8 py-4 rounded-full font-semibold text-lg hover:shadow-lg transform hover:scale-105 transition-all cursor-pointer" %>
      </div>
    </div>
  <% end %>
</div>
